<div id="wrapper">
  <div id="header">
    <div id="logo">
      <a href="<%= root_url %>"></a>
    </div>
    <%= yield :header %>
  </div>

  <div id="main">
    <%= yield %>
  </div>

  <div id="footer">
    <div id="credits">
      <div id="footer_left">
        <div class="mispy">A <a href="http://mispy.me/">mispy</a> creation.</div>
        <div class="veekun">Powered by <a href="http://veekun.com/">veekun</a> data.</div>
      </div>
    </div>
